{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "lightwatch-state-file",
  "title": "LightwatchAI2 State File",
  "description": "Schema for .lightwatch_state.json",

  "type": "object",
  "required": ["project_status", "current_phase", "phase_status", "completed_phases"],

  "properties": {
    "project_status": {
      "type": "string",
      "enum": ["IN_PROGRESS", "COMPLETE", "ESCALATED"],
      "description": "Overall project status"
    },

    "generation_complete": {
      "type": "boolean",
      "description": "Whether Phase 0.5 (prompt generation) is complete"
    },

    "current_phase": {
      "type": "number",
      "minimum": 0,
      "maximum": 40,
      "description": "Currently active phase number"
    },

    "phase_status": {
      "type": "string",
      "enum": ["NOT_STARTED", "EXECUTING", "VERIFYING", "COMPLETE", "FAILED", "PARTIAL_FAILURE", "ESCALATED"],
      "description": "Status of the current phase"
    },

    "current_branch": {
      "type": "string",
      "description": "Expected git branch name"
    },

    "completed_phases": {
      "type": "array",
      "items": { "type": "integer", "minimum": 1, "maximum": 40 },
      "uniqueItems": true,
      "description": "List of completed phase numbers"
    },

    "failed_phases": {
      "type": "array",
      "items": { "type": "integer", "minimum": 1, "maximum": 40 },
      "uniqueItems": true,
      "description": "List of failed phase numbers"
    },

    "completed_deliverables": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Deliverables completed in current phase"
    },

    "pending_deliverables": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Deliverables still pending in current phase"
    },

    "last_commit": {
      "type": "string",
      "pattern": "^[a-f0-9]{40}$|^$",
      "description": "SHA of the last commit"
    },

    "validation_passed": {
      "type": "boolean",
      "description": "Whether validate_prompts.py passed"
    },

    "checkpoints_passed": {
      "type": "array",
      "items": { "type": "integer", "enum": [10, 20, 30, 40] },
      "description": "List of checkpoint phases that passed"
    },

    "escalations": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of escalation messages"
    },

    "last_refactor": {
      "type": "string",
      "description": "Description of last refactoring operation"
    }
  }
}
